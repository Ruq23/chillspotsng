<% layout('layouts/boilerplate') %> 
<div id="map" style="width: 100%; height: 500px"></div>
    <h1>Hello, Howdy?</h1>
        <ul>
            <% for (let spot of spots) {%>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <% if(spot.image.length) {%> 
                         <img class="img-fluid" src="<%=spot.image[0].url%>" alt="" width="190px" height="100px">
                         <%  }else {%> 
                         <img class="img-fluid" src="https://res.cloudinary.com/dvrl6tjax/image/upload/v1676884897/SSite/uz6cyfi8zk6wkqjp8wmw.jpg" alt="" width="190px" height="100px">
                            <% } %> 
                        </div> 
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= spot.name %></h5>
                                <p class="card-text"><%= spot.location %> </p>

                                <p class="card-text">
                                  <small class="text-muted">Budget:<%= spot.price %></small>  
                                </p>
                                <a class="btn btn-primary" href="/list/<%=spot._id%>">View <%= spot.name %> </a>
                                 
                            </div>
                        </div>
                    </div>
                </div>
                <% } %> 
        </ul>

        <form action="/logout" method="POST">
            <button>Sign Out</button>
        </form>

        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const spots = {features: <%-JSON.stringify(spots)%>}
          </script>

        <script src="/javascripts/clusterMap.js"></script>
